{
    "extends": "@pika/typescript-config/base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": ".",
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "tsup.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}