{
    "name": "pika-cli",
    "version": "1.0.0",
    "description": "CLI tool for creating and managing Pika framework chat applications",
    "main": "dist/index.js",
    "bin": {
        "pika": "dist/index.js"
    },
    "scripts": {
        "build": "tsx scripts/build.ts",
        "build:tsc": "tsc",
        "dev": "tsx src/index.ts",
        "start": "node dist/index.js",
        "clean": "rm -rf dist",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write .",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "type-check": "tsc --noEmit",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "pika",
        "chatbot",
        "aws",
        "cli",
        "framework",
        "bedrock",
        "svelte"
    ],
    "author": "Pika Framework Team",
    "license": "MIT",
    "dependencies": {
        "commander": "catalog:",
        "inquirer": "catalog:",
        "chalk": "catalog:",
        "ora": "catalog:",
        "fs-extra": "catalog:",
        "semver": "catalog:",
        "node-fetch": "^3.3.2",
        "mustache": "catalog:",
        "glob": "catalog:",
        "yaml": "catalog:"
    },
    "devDependencies": {
        "@pika/eslint-config": "workspace:*",
        "@pika/typescript-config": "workspace:*",
        "@types/node": "catalog:",
        "@types/inquirer": "catalog:",
        "@types/fs-extra": "catalog:",
        "@types/mustache": "catalog:",
        "@types/semver": "catalog:",
        "typescript": "catalog:",
        "tsx": "catalog:",
        "jest": "catalog:",
        "@types/jest": "catalog:",
        "ts-jest": "catalog:"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "files": [
        "dist",
        "templates",
        "scripts",
        "README.md"
    ]
}
