{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "types": ["node"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src", "bin", "lib/stacks", "infra"],
    "exclude": ["node_modules", "dist", "cdk.out"]
} 